@model IEnumerable<MvcConciertosExam.Models.Evento>

@{
    ViewData["Title"] = "Index";
    List<Categoria> categorias = ViewData["CATEGORIAS"] as List<Categoria>;
}

<h1>Eventos GLobales</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<ul>
    @foreach(Categoria c in categorias) {
        <a asp-action="EventosCategoria" asp-controller="Conciertos" asp-route-id="@c.IdCategoria" class="btn btn-dark">
            @c.Nombre
        </a>
    }
</ul>

<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCategoria)
            </td>
            <td>
                <img src="@item.Imagen" style="width:100px"/>
            </td>
        </tr>
}
    </tbody>
</table>
